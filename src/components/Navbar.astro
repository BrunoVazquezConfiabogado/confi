---
import Logo from '/assets/logo.svg';
import '../styles/hamburger-menu.css';
---

<script>
	const menuToggle = document.getElementById('menu-toggle');
	const menu = document.getElementById('menuMobile');

	menuToggle.addEventListener('click', function () {
		menu.classList.toggle('hidden');
	});
</script>

<>
	<div
		class='bg-ghost/80 backdrop-blur shadow flex flex-row py-3 px-6 justify-between items-center fixed w-full z-[999]'
	>
		<div>
			<a href='/'
				><img
					class='max-h-14'
					src={Logo}
					alt='Logotipo Confiabogado'
				/></a
			>
		</div>
		<div class='hidden lg:block'>
			<div class='flex flex-row gap-x-6'>
				<a
					href='/despido-injustificado/'
					class='text-jet-1'
					>Despido injustificado</a
				>
				<a
					href='/registro-de-marca/'
					class='text-jet-1'
					>Registro de marca</a
				>
				<a
					href='/divorcio/'
					class='text-jet-1'
					>Divorcio</a
				>
				<a
					href='/pension-alimenticia/'
					class='text-jet-1'
					>Pensión alimenticia</a
				>
				<a
					href='#'
					class='text-digital-1 font-semibold'
					>Contacto</a
				>
			</div>
		</div>
		<div class='block lg:hidden'>
			<button
				id='menu-toggle'
				class='menu'
				onclick="console.log('abierto');this.classList.toggle('opened');this.setAttribute('aria-expanded', this.classList.contains('opened'))"
				aria-label='menú'
			>
				<svg
					width='40'
					height='40'
					viewBox='0 0 100 100'
				>
					<path
						class='line line1 stroke-jet-1'
						d='M 20,29.000046 H 80.000231 C 80.000231,29.000046 94.498839,28.817352 94.532987,66.711331 94.543142,77.980673 90.966081,81.670246 85.259173,81.668997 79.552261,81.667751 75.000211,74.999942 75.000211,74.999942 L 25.000021,25.000058'
					></path>
					<path
						class='line line2 stroke-jet-1'
						d='M 20,50 H 80'
					></path>
					<path
						class='line line3 stroke-jet-1'
						d='M 20,70.999954 H 80.000231 C 80.000231,70.999954 94.498839,71.182648 94.532987,33.288669 94.543142,22.019327 90.966081,18.329754 85.259173,18.331003 79.552261,18.332249 75.000211,25.000058 75.000211,25.000058 L 25.000021,74.999942'
					></path>
				</svg>
			</button>
		</div>
	</div>
	<div
		id='menuMobile'
		class='w-full h-screen overflow-y-hidden z-[998] hidden lg:hidden'
	>
		<div class='flex flex-col gap-y-12 p-4 pt-32 text-center'>
			<a
				class='text-jet-1 font-semibold text-xl hover:text-stone-900 hover:underline'
				href='/despido-injustificado/'
				>Despido injustificado</a
			>
			<a
				class='text-jet-1 font-semibold text-xl hover:text-stone-900 hover:underline'
				href='/registro-de-marca/'
				>Registro de marca</a
			>
			<a
				class='text-jet-1 font-semibold text-xl hover:text-stone-900 hover:underline'
				href='/divorcio/'
				>Divorcio</a
			>
			<a
				class='text-jet-1 font-semibold text-xl hover:text-stone-900 hover:underline'
				href='/pension-alimenticia/'
				>Pensión alimenticia</a
			>
			<a
				class='text-jet-1 font-semibold text-xl hover:text-stone-900 hover:underline'
			>
				Contacto
			</a>
		</div>
	</div>
</>
